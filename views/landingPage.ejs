                datasets: [{
                    label: 'The chart data is in percentage',
                    data: ['15', '5', '25', '35', '20'],
                    backgroundColor: ["#b91d47", "#00aba9", "#2b5797", "#e8c3b9", "#1e7145"],
                    borderColor: ["#b91d47", "#00aba9", "#2b5797", "#e8c3b9", "#1e7145"]
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "The chart data is in percentage"
                },

                legend: false,
                legendCallback: function (myChart) {
                    var ul = document.createElement('ul');
                    var borderColor = myChart.data.datasets[0].borderColor;
                    var dataValue = myChart.data.datasets[0].data;
                    myChart.data.labels.forEach(function (label, index) {
                        ul.innerHTML += `
                        <li>
                            <span style="background-color: ${borderColor[index]}";></span> ${label} ${dataValue[index]}
                        </li>`;

                    });
                    return ul.outerHTML;
                }

            }
        });
        legend.innerHTML = ctx.generateLegend();
    </script>

